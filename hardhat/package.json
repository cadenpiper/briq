{
  "name": "briq-core",
  "version": "1.0.0",
  "description": "Smart contracts for Briq DeFi yield optimization protocol",
  "main": "index.js",
  "scripts": {
    "test": "npx hardhat test --network hardhat",
    "test:coverage": "npx hardhat coverage",
    "compile": "npx hardhat compile",
    "clean": "npx hardhat clean",
    "node": "npx hardhat node",
    "deploy": "npx hardhat run scripts/forking/deploy.ts --network localhost",
    "configure": "npx hardhat run scripts/forking/configure.ts --network localhost",
    "fund": "npx hardhat run scripts/forking/fundAccount.ts --network localhost",
    "fund-rupert": "npx hardhat run scripts/forking/fundRupert.ts --network localhost",
    "set-rupert": "npx hardhat run scripts/forking/setRupert.ts --network localhost",
    "balance": "npx hardhat run scripts/forking/checkBalance.ts --network localhost",
    "setup-fork": "npm run deploy && npm run configure && npm run fund && npm run fund-rupert && npm run set-rupert && npm run balance"
  },
  "keywords": [
    "defi",
    "yield",
    "optimization",
    "ethereum",
    "arbitrum"
  ],
  "author": "Briq Protocol",
  "license": "UNLICENSED",
  "type": "module",
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.3",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.1",
    "@types/node": "^22.19.1",
    "forge-std": "github:foundry-rs/forge-std#v1.9.7",
    "hardhat": "^3.0.14",
    "typescript": "~5.8.0",
    "viem": "^2.39.0"
  },
  "dependencies": {
    "@aave/core-v3": "^1.19.3",
    "@chainlink/contracts": "^1.5.0",
    "@nomicfoundation/hardhat-keystore": "^3.0.3",
    "@openzeppelin/contracts": "^5.4.0",
    "@pythnetwork/pyth-sdk-solidity": "^4.2.0"
  }
}
